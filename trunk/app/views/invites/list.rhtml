<h2>Leader Invitations</h2>

<% @states.each do |state| %>
	<% if state == @display_state %>
		<%= state + ' ' %>
	<% else %>
		<%= link_to state + ' ', :action => 'list', :state => state %>
	<% end %>
<% end %>
<br /><br />
<div class="invites-list">
<table border="0" cellpadding="5" cellspacing="0">
  <tr><td>Politician</td><td>Congress Person</td><td>Invited?</td><td>Attending</td><td><td><tr/>
  <%= render :partial => 'grid_item', :collection => @politicians %>
</table>
</div>

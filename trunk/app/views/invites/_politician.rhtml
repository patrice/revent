<% if not politician.nil? %>
<table>
	<tr>
		<td><%= link_to image_tag(politician.image_url, :size => "60x70"), invite_url(:action => 'show', :politician_id => politician) %><td>
		<td><%= link_to 'Send a Letter', url_for(:action => 'letter', :politician_id => politician.id), :popup => true %><br/>
			 <%= link_to 'Call', url_for(:action => 'call', :politician_id => politician.id), :popup => true %><br/>
			 <%= link_to 'Email', url_for(:action => 'email', :politician_id => politician.id), :popup => true %><br/>
		</td>
	</tr>
</table>
<%= politician.display_name %>
<% else %>
No politicians found in this area.
<% end %>
<br/><br/>

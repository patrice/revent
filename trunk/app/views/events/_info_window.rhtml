<% window = capture do %>
<%= event.name %><br/>
<%= [event.city, event.state].compact.join(', ') %><br/>
<%= event.start.strftime('%a %b %d %I:%M%p').gsub(/ 0/,' ') %><br/>
<%= link_to 'Click for more details', :controller => 'events', :action => 'show', :id => event.id %>
<% end %>
<%= escape_javascript(window) %>

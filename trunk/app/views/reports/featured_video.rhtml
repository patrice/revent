document.write('<div id="report-widget"><% @reports.each do |report| -%><% if report.embeds.first.youtube_video_id -%><div class="report-widget-image" style="float:left;margin:10px"><%= link_to(image_tag(report.embeds.first.youtube_thumbnail_url), report.embeds.first.youtube_video_url, :popup => true) %></div><% end -%><div class="report-widget-title"><%= link_to "#{report.event.city}, #{report.event.state}", :permalink => @calendar.permalink, :controller => "reports", :action => "show", :event_id => report.event.id, :only_path=>false %></div><div class="report-widget-text"><%= truncate(simple_format(report.text).gsub(/\n/,''), 180) %></div><br/><% end -%></div>');

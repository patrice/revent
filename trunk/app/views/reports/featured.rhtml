document.write('<div id="report-widget"><% @reports.each do |report| -%><% if report.attachments.any? -%><div class="report-widget-image" style="float:left;margin:10px"><%= image_tag report.attachments.first.public_filename(:list) %></div><% end -%><div class="report-widget-title"><%= link_to "#{report.event.city}, #{report.event.state}", :permalink => @calendar.permalink, :controller => "reports", :action => "show", :event_id => report.event.id, :only_path=>false %></div><div class="report-widget-text"><%= truncate(simple_format(report.text).gsub(/\n/,''), 180) %></div><br/><% end -%></div>');

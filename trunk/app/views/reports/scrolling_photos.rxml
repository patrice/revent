xml.data do
  @reports.each do |r|
    xml.event do
      xml.location(r.event.city_state)
      xml.comment(r.attachments.first.caption || r.event.name)
      xml.image(r.attachments.first.public_filename)
      xml.link(report_url(:permalink => @calendar.permalink, :event_id => r.event.id)
    end
  end
end

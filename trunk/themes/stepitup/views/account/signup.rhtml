<input type="hidden" name="End" />

<%= event.select_year "end", :style => "background-color: rgb(235, 216, 151);", :id => "dataEndYEAR" %>

<%= event.select_month "end", :style => "background-color: rgb(235, 216, 151);", :id => "dataEndMONTH" %>

<%= event.select_day "end", :style => "background-color: rgb(235, 216, 151);", :id => "dataEndDAY" %>
<% day_options = '<option value="13">13</option>
  <option selected value="14">14</option>
  <option value="15">15</option>' %>
			
<%= event.select_time "end", :style => "background-color: rgb(235, 216, 151);", :id => "dataEndTIME" %>
	
		</td>
				<td class="dia_required"> <strong>*</strong></td>
  </tr></tbody></table>
<% end -%>


<%= select_tag "#{event.object_name}[start][time]", DemocracyInAction::Helpers.time_options_for_select(12), :style => "background-color: rgb(235, 216, 151);", :id => "dataStartTIME" %>
	
		</td>
				<td class="dia_required"> <strong>*</strong></td>
		</tr><tr>
			<td valign="top" align="right" class="dia_field_name"><div align="left">End:</div></td>
